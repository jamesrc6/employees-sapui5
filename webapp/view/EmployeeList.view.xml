<mvc:View xmlns:charts="sap.ca.ui.charts"
    controllerName="axelera.employees.controller.EmployeeList"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                        <Panel id="panelEmpliyee" >
                            <Table id="employeeList" class="sapUiResponsiveMargin" width="auto"
                                    items="{path : 'employee>/Employees'}">
                                <columns>
                                    <Column id="_IDGenColumn1" >
                                        <Text id="_IDGenText1" text="{i18n>columnEmployeeID}"/>
                                    </Column>
                                    <Column id="_IDGenColumn2" >
                                        <Text id="_IDGenText2" text="{i18n>columnLastName}"/>
                                    </Column>
                                    <Column id="_IDGenColumn3" >
                                        <Text id="_IDGenText3" text="{i18n>columnFirstName}"/>
                                    </Column>
                                    <Column id="_IDGenColumn4" >
                                        <Text id="_IDGenText4" text="{i18n>columnAddress}"/>
                                    </Column>
                                    <Column id="_IDGenColumn5" >
                                        <Text id="_IDGenText5" text="{i18n>columnCity}"/>
                                    </Column>
                                    <Column id="_IDGenColumn6" >
                                        <Text id="_IDGenText6" text="{i18n>columnCountry}"/>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem id="_IDGenColumnListItem1" >
                                        <cells>
                                            <ObjectNumber id="_IDGenText7" number="{employee>EmployeeID}"/>
                                            <Text id="_IDGenText8" text="{employee>LastName}"/>
                                            <Text id="_IDGenText9" text="{employee>FirstName}"/>
                                            <Text id="_IDGenText10" text="{employee>Address}"/>
                                            <Text id="_IDGenText11" text="{employee>City}"/>
                                            <Text id="_IDGenText12" text="{employee>Country}"/>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </Panel>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
